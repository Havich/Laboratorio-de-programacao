//Lê dois números e mostra a soma. Antes do resultado deverá aparecer a mensagem SOMA

//Inclusao de bibliotecas
#include <stdio.h>

//Função principal
int main()
{
	//Declaraçao de variaveis
	int n1, n2, soma;
	
	//Entrada de dados
    printf("Digite os valores\n");
    scanf("%d%d", &n1, &n2);
    
    //Cálculo
    soma = n1 + n2;
    
	//Saída de dados
	printf("SOMA.\n %d + %d = %d\n", n1, n2, soma);	
	
	//Fim da função principal
	return 0;
}
